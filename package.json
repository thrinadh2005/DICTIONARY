{
    "name": "dictionary-app",
    "version": "1.0.0",
    "description": "A powerful offline-first dictionary app",
    "main": "backend/server.js",
    "scripts": {
        "install:backend": "cd backend && npm install",
        "install:frontend": "cd frontend && npm install",
        "install:all": "npm run install:backend && npm run install:frontend",
        "build:frontend": "cd frontend && npm run build",
        "start": "node backend/server.js",
        "dev:backend": "cd backend && npx nodemon server.js",
        "dev:frontend": "cd frontend && npm start",
        "dev": "npx concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "heroku-postbuild": "npm run install:all && npm run build:frontend"
    },
    "keywords": [
        "dictionary",
        "offline-first",
        "react",
        "express"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^3.1.0"
    }
}